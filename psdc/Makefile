GENDIR = generated

GENOBJS = $(GENDIR)/st_parser.o $(GENDIR)/st_lexer.o
OBJS    = psdc.o str_set.o file_line.o signal_id.o \
	dumper.o prefix_unit.o \
	c_struct.o \
	corr_struct.o
#	rcsu.o cable_node.o hardware_def.o hardware_handler.o \
#	hw_module.o daq_code.o enumerate.o trace.o str_set.o

ALL_OBJS = $(OBJS) $(GENOBJS)

AUTO_DEPS = $(ALL_OBJS:%.o=%.d)

CXXLINK = $(CXX)

CXXFLAGS += -g -I. -I../common# so autogenerated files find includes
CXXFLAGS += # -ansi , troubles with strdup and fileno
CXXFLAGS += -O3
CXXFLAGS += -DPSDC_SRC

CXXFLAGS += -ansi -Wall -W -Wno-unused-function -Wno-unused-label -Wno-unused-parameter -Wwrite-strings -Wconversion -Werror -Wcast-qual #-Wshadow

CXXLINKFLAGS += -rdynamic # for backtrace

UNAME_S:=$(shell uname -s)
ifneq ($(UNAME_S),Darwin)
  CXXFLAGS += 
endif

#########################################

include ../makefile_filter_warnings.inc

#########################################

CPP_DEFINES_CYGWIN = $(shell $(CPP) -x c -dM /dev/null | grep __CYGWIN__)

#########################################
# Cygwin got vsnprintf problems with -ansi

ifneq (,$(CPP_DEFINES_CYGWIN))
CXXFLAGS := $(filter-out -Wshadow -ansi,$(CXXFLAGS))
endif

#########################################

# Default target

all: psdc

# Cleanup

clean:
	rm -rf $(GENDIR)
	rm -f $(ALL_OBJS)
	rm -f $(AUTO_DEPS)
	rm -f psdc.base.dep
	rm -f psdc.dep
	rm -f psdc

# Create the autogenerated files (lexer, parser)

include $(UCESB_BASE_DIR)/lu_common/flex_patching.mk

INCLUDE_FILE_PL = ../lu_common/include_file.pl

AUTO_DEPS += $(GENDIR)/st_parser.y.incfile.d

$(GENDIR)/st_parser.y.incfile.d: st_parser.y $(INCLUDE_FILE_PL)
	@echo " INCDEPS $@"
	@mkdir -p $(dir $@)
	@perl $(INCLUDE_FILE_PL) --input=$< --dependencies=$@ > $@

$(GENDIR)/st_parser.y.incfile: st_parser.y $(GENDIR)/st_parser.y.incfile.d
	@echo " INCFILE $@"
	@mkdir -p $(dir $@)
	@perl $(INCLUDE_FILE_PL) --input=$< && touch $@

$(GENDIR)/y.tab.c: st_parser.y $(GENDIR)/st_parser.y.incfile
	@echo "  YACC   $@"
	@mkdir -p $(dir $@)
	@#$(YACC) --report=state,lookahead,itemset -d -o $@ $<
	@$(YACC) -d -o $@ $<
	@touch $(GENDIR)/y.tab.h

$(GENDIR)/y.tab.h: $(GENDIR)/y.tab.c

$(GENDIR)/st_parser.cc: $(GENDIR)/y.tab.c
	@echo "   CP    $@"
	@cp $(GENDIR)/y.tab.c $@

$(GENDIR)/st_parser.hh: $(GENDIR)/y.tab.h
	@echo "   CP    $@"
	@cp $(GENDIR)/y.tab.h $@

AUTO_DEPS += $(GENDIR)/st_lexer.lex.incfile.d

$(GENDIR)/st_lexer.lex.incfile.d: st_lexer.lex $(INCLUDE_FILE_PL)
	@echo " INCDEPS $@"
	@mkdir -p $(dir $@)
	@perl $(INCLUDE_FILE_PL) --input=$< --dependencies=$@ > $@

$(GENDIR)/st_lexer.lex.incfile: st_lexer.lex $(GENDIR)/st_lexer.lex.incfile.d
	@echo " INCFILE $@"
	@mkdir -p $(dir $@)
	@perl $(INCLUDE_FILE_PL) --input=$< && touch $@

$(GENDIR)/st_lexer.cc: st_lexer.lex $(GENDIR)/st_lexer.lex.incfile
	@echo "   LEX   $@"
	@mkdir -p $(dir $@)
	@$(LEX) -8 -o $@.lex.tmp $<
	@cat $@.lex.tmp | $(FLEX_PATCH_PIPELINE) > $@.tmp
	@mv $@.tmp $@

$(GENDIR)/st_lexer.o: $(GENDIR)/st_parser.hh

%.o: %.cc %.d
	@echo "   CXX   $@"
	@$(CXX) $(call FILTER_WARNINGS,$@,$(CXXFLAGS)) $(OPTFLAGS) -o $@ -c $<

%.d: %.cc
	@echo "  DEPS   $@"
	@$(CXX) $(call FILTER_WARNINGS,$@,$(CXXFLAGS)) -MM -MG $< | \
	  sed -e 's,\($(*F)\)\.o[ :]*,$*.o $@ : ,g' \
	> $@

%.o: ../common/%.cc %.d
	@echo "   CXX   $@"
	@$(CXX) $(call FILTER_WARNINGS,$@,$(CXXFLAGS)) $(OPTFLAGS) -o $@ -c $<

%.d: ../common/%.cc
	@echo "  DEPS   $@"
	@$(CXX) $(call FILTER_WARNINGS,$@,$(CXXFLAGS)) -MM -MG $< | \
	  sed -e 's,\($(*F)\)\.o[ :]*,$*.o $@ : ,g' \
	> $@

include ../makefile_deps.inc

psdc.dep: $(AUTO_DEPS)
	@echo " FULLDEP $@"
	@echo "$@ $(MAKECMDGOALS): \\" > $@
	@cat $(AUTO_DEPS) | sed -e 's,^.*:,,g' |\
          sed -e 's,^#.*,,g' |\
          sed -e 's,^.*:,,g' |\
	  $(SPACE_TO_NEWLINE) |\
	  sed -e 's,^,  ,g' |\
	  sed -e 's,$$,\\,g' |\
	  sed -e 's,\\\\$$,\\,g' | sort -u >> $@
	@echo "  st_parser.y\\" >> $@
	@echo "  st_lexer.lex\\" >> $@

#

psdc.base.dep: psdc.dep
	@echo " BASEDEP $@"
	@echo '$$(UCESB_BASE_DIR)/psdc/$(MAKECMDGOALS): \' > $@
	@cat $< | grep -v ' \\' | sed -e 's,  /, /,' | \
	  sed -e 's,  ,  $$\(UCESB_BASE_DIR\)/psdc/,g' | sort -u >> $@

#
# Link

psdc: $(ALL_OBJS) psdc.dep psdc.base.dep
	@echo "  LINK   $@"
	@$(CXXLINK) $(CXXLINKFLAGS) $(ALL_OBJS) $(CXXLIBS) -o $@

ifneq (clean,$(MAKECMDGOALS))
-include $(AUTO_DEPS) # dependency files (.d)
endif

